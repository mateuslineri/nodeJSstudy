<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>

<div class="container mt-5">

  <h2>Categorias</h2>

  <a href="/admin/categories/new" class="btn btn-success">Nova categoria</a>

  <table class="table table-hover mt-4">
    <thead>
      <tr>
        <th>ID</th>
        <th>Título</th>
        <th>Slug</th>
        <th>Ações</th>
      </tr>
    </thead>

    <tbody>
      <% categories.forEach(category => { %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.title %></td>
        <td><%= category.slug %></td>
        <td>
          <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-primary">Editar</a>

          <form action="/admin/categories/delete" method="POST" style="display: inline" onsubmit="confirmExclusion(event, this);">
            <input type="hidden" name="categoryId" value="<%= category.id %>">
            <button class="btn btn-danger">Excluir</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <script src="/js/categories.js"></script>
</div>
<%- include('../../partials/footer.ejs') %>